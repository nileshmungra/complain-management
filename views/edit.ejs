<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Complaint</title>
  <link rel="stylesheet" href="/css/style.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <style>
    /* General Styles */
    body {
      font-family: 'Inter', sans-serif; /* Clean, modern typography */
      background-color: #f8f9fb; /* Neutral background */
      color: #333;
      padding: 20px;
      line-height: 1.6;
    }

    .app-container {
      max-width: 800px;
      margin: 40px auto;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
      font-size: 2rem;
      color: #4caf50;
      font-weight: bold;
    }

    .form-label {
      font-size: 1rem;
      font-weight: 600;
      color: #495057;
    }

    .form-control,
    .form-select,
    textarea {
      border: 1px solid #ddd;
      padding: 12px;
      border-radius: 6px;
      width: 100%;
      margin-top: 8px;
      font-size: 1rem;
      background-color: #f9f9f9;
      transition: border-color 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus,
    textarea:focus {
      border-color: #4caf50; /* Green focus color */
      outline: none;
    }

    textarea {
      resize: vertical;
    }

    .mb-3 {
      margin-bottom: 20px;
    }

    .btn {
      padding: 12px 18px;
      font-size: 1rem;
      border-radius: 6px;
      cursor: pointer;
      text-align: center;
      transition: all 0.3s ease-in-out;
      width: 100%; /* Full width for buttons */
    }

    .btn-primary {
      background-color: #4caf50;
      color: white;
      border: none;
    }

    .btn-primary:hover {
      background-color: #3e8e41;
    }

    .btn-danger {
      background-color: #dc3545;
      color: white;
      border: none;
    }

    .btn-danger:hover {
      background-color: #b02a37;
    }

    .btn-success {
      background-color: #28a745;
      color: white;
      border: none;
    }

    .btn-success:hover {
      background-color: #218838;
    }

    .nav-buttons {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-bottom: 20px;
    }

    /* Back Button Styling */
    a.btn.btn-primary {
      display: inline-block;
      text-align: center;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    a.btn.btn-primary:hover {
      background-color: #3e8e41; /* Match primary button hover */
    }

    /* Responsive Design */
    @media (max-width: 480px) {
      body {
        padding: 10px;
      }

      .btn {
        padding: 10px 14px;
      }

      h1 {
        font-size: 1.5rem;
      }
    }
  </style>

</head>
<body>
  <div class="app-container">
    <h1>Add/Edit Complaint</h1>
    
    <!-- Add a Back button to navigate to the main page -->
    <div class="nav-buttons">
      <a href="/" class="btn btn-primary">Back to Complaints List</a>
    </div>

    <form action="/save" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="srno" value="<%= complaint ? complaint.srno : '' %>">
      <div class="mb-3">
        <label for="farmerName" class="form-label">Farmer Name</label>
        <input type="text" class="form-control" id="farmerName" name="farmerName" value="<%= complaint ? complaint.farmerName : '' %>" required>
      </div>
      <div class="mb-3">
        <label for="complaintBrief" class="form-label">Short Brief of Complaints</label>
        <textarea class="form-control" id="complaintBrief" name="complaintBrief" rows="3" required><%= complaint ? complaint.complaintBrief : '' %></textarea>
      </div>
      <div class="mb-3">
        <label for="materialSupplyDate" class="form-label">Material Supply Date</label>
        <input type="date" class="form-control" id="materialSupplyDate" name="materialSupplyDate" value="<%= complaint ? complaint.materialSupplyDate : '' %>" required>
      </div>
      <div class="mb-3">
        <label for="complainDate" class="form-label">Complain Date</label>
        <input type="date" class="form-control" id="complainDate" name="complainDate" value="<%= complaint ? complaint.complainDate : '' %>" required>
      </div>
      <div class="mb-3">
        <label for="solveDate" class="form-label">Solve Date</label>
        <input type="date" class="form-control" id="solveDate" name="solveDate" value="<%= complaint ? complaint.solveDate : '' %>">
      </div>
      <div class="mb-3">
        <label for="closeDate" class="form-label">Close Date</label>
        <input type="date" class="form-control" id="closeDate" name="closeDate" value="<%= complaint ? complaint.closeDate : '' %>">
      </div>
      <div class="mb-3">
        <label for="complainType" class="form-label">Complain Type</label>
        <select class="form-select" id="complainType" name="complainType" required>
          <option value="Material Fault" <%= complaint && complaint.complainType == 'Material Fault' ? 'selected' : '' %>>Material Fault</option>
          <option value="Short Supply" <%= complaint && complaint.complainType == 'Short Supply' ? 'selected' : '' %>>Short Supply</option>
          <option value="Item Change" <%= complaint && complaint.complainType == 'Item Change' ? 'selected' : '' %>>Item Change</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="dealerName" class="form-label">Dealer Name</label>
        <input type="text" class="form-control" id="dealerName" name="dealerName" value="<%= complaint ? complaint.dealerName : '' %>" required>
      </div>
      <div class="mb-3">
        <label for="areaManager" class="form-label">Area Manager</label>
        <input type="text" class="form-control" id="areaManager" name="areaManager" value="<%= complaint ? complaint.areaManager : '' %>" required>
      </div>
      <div class="mb-3">
        <label for="status" class="form-label">Status</label>
        <select class="form-select" id="status" name="status" required>
          <option value="Pending" <%= complaint && complaint.status == 'Pending' ? 'selected' : '' %>>Pending</option>
          <option value="In Process" <%= complaint && complaint.status == 'In Process' ? 'selected' : '' %>>In Process</option>
          <option value="Done" <%= complaint && complaint.status == 'Done' ? 'selected' : '' %>>Done</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="solutionDescription" class="form-label">Solution Description</label>
        <textarea class="form-control" id="solutionDescription" name="solutionDescription" rows="3"><%= complaint ? complaint.solutionDescription : '' %></textarea>
      </div>
      <div class="mb-3">
        <label for="replacementReceived" class="form-label">Replacement Received</label>
        <select class="form-select" id="replacementReceived" name="replacementReceived" required>
          <option value="No" <%= complaint && complaint.replacementReceived == 'No' ? 'selected' : '' %>>No</option>
          <option value="Yes" <%= complaint && complaint.replacementReceived == 'Yes' ? 'selected' : '' %>>Yes</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="complainForm" class="form-label">Upload Complaint Form</label>
		<% if (complaint && complaint.complainForm) { %>
			<p>Current: <a href="/uploads/<%= complaint.complainForm %>" target="_blank">View File</a></p>
		<% } else { %>
			<p>No complaint form uploaded.</p>
		<% } %>
        <input type="file" class="form-control" id="complainForm" name="complainForm">
      </div>
      <div class="mb-3">
        <label for="photo" class="form-label">Upload Photo</label>
		<% if (complaint&&complaint.photo) { %>
			<% complaint.photo.split(",").forEach(photo => { %>
			<p>Current: <a href="/uploads/<%= photo.trim() %>" target="_blank">View Photo</a></p>
			<% }); %>
		<% } else { %>
			<p>No photos uploaded.</p>
		<% } %>
        <input type="file" class="form-control" id="photo" name="photo" accept="image/*" multiple>
      </div>
      <div class="mb-3">
        <label for="video" class="form-label">Upload Video</label>
		<% if (complaint&&complaint.video) { %>
			<% complaint.video.split(",").forEach(video => { %>
				<p>Current: <a href="/uploads/<%= video.trim() %>" target="_blank">View Video</a></p>
			<% }); %>
		<% } else { %>
			<p>No videos uploaded.</p>
		<% } %>
        <input type="file" class="form-control" id="video" name="video" accept="video/*">
      </div>

      <div class="nav-buttons">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</body>
</html>
